<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="FRITZTheme" parent="@android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:textAppearance">@style/FRITZTextAppearanceSmallBold</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/FRITZBlueText</item>
	</style>
	
	<style name="FRITZTextAppearanceSmall" parent="@android:style/TextAppearance">
		<item name="android:textSize">14dip</item>
		<item name="android:textColor">@color/FRITZBlueText</item>
	</style>
	
	<style name="FRITZTextAppearanceSmallBold" parent="@style/FRITZTextAppearanceSmall">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="FRITZTextAppearanceBig" parent="@android:style/TextAppearance">
		<item name="android:textSize">18dip</item>
		<item name="android:textColor">@color/FRITZBlueText</item>
	</style>

	<style name="FRITZTextAppearanceLauncherList" parent="@android:style/TextAppearance">
		<item name="android:textSize">16dip</item>
		<item name="android:textColor">@color/FRITZBlueText</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="FRITZTextAppearanceLauncherButton" parent="@style/FRITZTextAppearanceSmallBold">
	</style>

	<style name="FRITZTextAppearanceIncall" parent="@style/FRITZTextAppearanceBig">
	</style>

	<style name="FRITZTextAppearanceVeryBig" parent="@style/FRITZTextAppearanceBig">
		<item name="android:textSize">24dip</item>
	</style>
	
	<!-- Zeile Ã¼ber der Liste -->
	<style name="FRITZListHeader" >
		<item name="android:background">#AAA</item>
	</style>
	
	<style name="FRITZListView" parent="@android:style/Widget.ListView">
	 <item name="android:listSelector">@drawable/list_selector_background</item>
	 <item name="android:cacheColorHint">#FFFFFFFF</item>
	</style>
	
	<!-- Wird verwendet fuer alle ListItem Templates. -->
	<style name="FRITZListItemLayout" parent="@android:style/TextAppearance">
		<item name="android:padding">7dip</item>
		<item name="android:paddingBottom">12dip</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="Launcher" >
		<item name="android:gravity">center</item>
	</style>
	
	<style name="StatusDisplayTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">10dip</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="StatusDisplayTextDisabledAppearance" parent="@style/StatusDisplayTextAppearance">
		<item name="android:textColor">#D9D9D9</item>
	</style>
	
</resources>