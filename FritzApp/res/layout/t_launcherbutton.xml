<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/launch_button" style="@style/Launcher"
	android:layout_width="wrap_content"
	android:orientation="vertical">
	
	<ImageButton android:id="@+id/launcher_button"
		android:src="@drawable/settings_icon"
		android:background="@color/transparent"
		android:layout_centerHorizontal="true"
		android:tag="launcher"
		android:scaleType="fitCenter" />

	<TextView android:id="@+id/launcher_text"
		android:text="default"
		style="@style/FRITZTextAppearanceLauncherButton"
		android:layout_width="wrap_content" android:layout_height="25dip"
		android:layout_below="@id/launcher_button"
		android:layout_centerHorizontal="true" />
</RelativeLayout>